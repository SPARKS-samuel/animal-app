    }
    h1 {
      color: #333;
    }
    input[type="text"] {
      padding: 10px;
      width: 80%;
      max-width: 400px;
      margin-bottom: 20px;
      border: 1px solid #aaa;
      border-radius: 5px;
    }
    .animal-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 20px;
    }
    .animal-card {
      background: white;
      border-radius: 10px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
      width: 200px;
      padding: 10px;
      transition: transform 0.3s ease;
      cursor: pointer;
    }
    .animal-card:hover {
      transform: scale(1.05);
    }
    .animal-card img {
      width: 100%;
      height: 150px;
      object-fit: cover;
      border-radius: 8px;
    }
    .animal-name {
      font-weight: bold;
      margin-top: 10px;
    }
  </style>
