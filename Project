<body>
  <h1>Animal Explorer</h1>
  <input type="text" id="search" placeholder="Search for an animal..." onkeyup="filterAnimals()" />

  <div class="animal-container" id="animalContainer">
    <!-- Animal Cards -->
    <div class="animal-card" onclick="playSound('lion')">
      <img src="https://upload.wikimedia.org/wikipedia/commons/7/73/Lion_waiting_in_Namibia.jpg" alt="Lion" />
      <div class="animal-name">Lion</div>
      <audio id="lion" src="https://www.soundjay.com/animal/lion-roar-01.mp3"></audio>
    </div>
    <div class="animal-card" onclick="playSound('elephant')">
      <img src="https://upload.wikimedia.org/wikipedia/commons/3/37/African_Bush_Elephant.jpg" alt="Elephant" />
      <div class="animal-name">Elephant</div>
      <audio id="elephant" src="https://www.soundjay.com/animal/elephant-01.mp3"></audio>
    </div>
    <div class="animal-card" onclick="playSound('monkey')">
      <img src="https://upload.wikimedia.org/wikipedia/commons/3/3e/Capuchin_Costa_Rica.jpg" alt="Monkey" />
      <div class="animal-name">Monkey</div>
      <audio id="monkey" src="https://www.soundjay.com/animal/monkey-sound.mp3"></audio>
    </div>
    <div class="animal-card" onclick="playSound('zebra')">
      <img src="https://upload.wikimedia.org/wikipedia/commons/0/0f/Plains_Zebra_Equus_quagga.jpg" alt="Zebra" />
      <div class="animal-name">Zebra</div>
      <audio id="zebra" src="https://www.soundjay.com/animal/zebra-sound.mp3"></audio>
    </div>
  </div>

  <script>
    function playSound(animalId) {
      const sound = document.getElementById(animalId);
      sound.currentTime = 0;
      sound.play();
    }

    function filterAnimals() {
      const input = document.getElementById('search').value.toLowerCase();
      const cards = document.querySelectorAll('.animal-card');

      cards.forEach(card => {
        const name = card.querySelector('.animal-name').textContent.toLowerCase();
        card.style.display = name.includes(input) ? 'block' : 'none';
      });
    }
  </script>
</body>
</html>
